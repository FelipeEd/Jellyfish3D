{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with symbols and no optimizations",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "JELLYFISH_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Optimized release build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "JELLYFISH_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "lib-only",
      "displayName": "Library Only",
      "description": "Build only the Jellyfish3D library without examples",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "JELLYFISH_BUILD_EXAMPLES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug",
      "jobs": 4
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release",
      "jobs": 4
    },
    {
      "name": "lib-only",
      "displayName": "Library Only Build",
      "configurePreset": "lib-only",
      "jobs": 4
    }
  ]
}
